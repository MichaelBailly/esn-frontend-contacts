extends /modules/subheader/responsive-subheader.pug

block left
  button.btn.btn-link.hidden-xs(ng-click="close()")
    .flex-vertical-centered
      i.mdi.mdi-close.mdi-margin-right
      span {{ 'Cancel' | translate }}
  button.btn.btn-link.btn-icon.visible-xs(ng-click="close()")
    i.mdi.mdi-close

block right
  .dropdown.flex-vertical-centered
    a(href='', data-toggle='dropdown', aria-expanded='true')
      i.mdi.mdi-dots-vertical
    ul.dropdown-menu.dropdown-menu-right.clickable
      li
        a(ng-click="deleteContact()", esn-back-button="contact") {{ 'Delete' | translate }}

  button.btn.btn-link.save.hidden-xs(ng-disabled='calling || !loaded', type='button', ng-click='save()')
    .flex-vertical-centered
      span {{ 'Save' | translate }}
      i.mdi.mdi-check.mdi-margin-left

  button.btn.btn-link.btn-icon.visible-xs(ng-disabled='calling || !loaded', type='button', ng-click='save()')
    i.mdi.mdi-check
