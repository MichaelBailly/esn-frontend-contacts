extends /modules/subheader/responsive-subheader.pug

block left
  button.btn.btn-link.btn-icon(esn-back-button='contact', title="{{ 'Back' | translate }}")
    i.mdi.mdi-arrow-left

block right
  .dropdown.flex-vertical-centered
    a(href='', data-toggle='dropdown', aria-expanded='true')
      i.mdi.mdi-dots-vertical
    ul.dropdown-menu.dropdown-menu-right.clickable
      li
        a(href='', ng-if='displayShell.addressbook.canEditContact', ng-click='edit()') {{ 'Edit' | translate }}
      li
        a(href='', ng-if='displayShell.addressbook.canDeleteContact', ng-click='deleteContact()') {{ 'Delete' | translate }}
      li
        contact-action-copy.contact-dropdown-action-item(
          ng-if='displayShell.addressbook.canCopyContact',
          contact='contact'
        )
      li
        contact-action-move.contact-dropdown-action-item(
          ng-if='displayShell.addressbook.canMoveContact',
          contact='contact'
        )
