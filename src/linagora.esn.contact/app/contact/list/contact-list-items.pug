.row.all-centered
  .contact-alpha-letter(ng-show='headerDisplay.mobileLetterVisibility')
    contact-category-letter
  .col-xs-12
    div(data-contact-index="{{letter}}" ng-repeat="(letter, contacts) in sorted_contacts" on-finish-render)
      .letter-list(ng-if='contacts && contacts.length')
        .block-header
          h2 {{letter}}
        .card.contacts-card.fadeIn200ms
          .listview.lv-bordered.lv-lg
            .lv-body
              contact-list-item.lv-item.p-0(contact='contact', ng-repeat="contact in contacts")
