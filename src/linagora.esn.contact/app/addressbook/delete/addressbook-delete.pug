.modal(tabindex="-1", role="dialog")
  .modal-dialog
    .modal-content
      .modal-header
        h4.modal-title {{ 'Delete address book?' | translate }}
      .modal-body
        p {{ 'Address book %s will be deleted along with its contacts.' | translate:$ctrl.addressbookDisplayShell.displayName }}
      .modal-footer
        button.btn.btn-link(ng-click="$hide()")
          | {{ 'Cancel' | translate }}
        button.btn.btn-danger(ng-click="$ctrl.onDeleteBtnClick(); $hide()")
          | {{ 'Delete' | translate }}
